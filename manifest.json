{
	"name": "AllTabs",
	"version": "1.0",
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content.js"
			]
		}
	],
	"browser_action": {
		// "default_popup": "popup.html",
		"default_title": "AllTabs"
	},
	"background": {
		"scripts": [
			"bg.js"
		]
	},
	"permissions": [
		"tabs",
		"contextMenus",
		"activeTab",
		"chrome://favicon/"
	],
	"manifest_version": 2
}